        public Platform_Value Type { get; set; }
        public string Icon => GetIcon(Type);

        public string GetIcon(Platform_Value? platform)
        {
            switch (platform)
            {
                case Platform_Value.unity:
                    return "fa-brands fa-unity";
                default:
                    return "";
            }

        }
    }

