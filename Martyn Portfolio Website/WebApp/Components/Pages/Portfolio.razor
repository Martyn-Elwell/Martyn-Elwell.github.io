@page "/portfolio"


<PageTitle>Portfolio</PageTitle>
<div class="container">
    <div class="row row-cols-1 row-cols-md-4 row-cols-lg-6 justify-content-center">
        <div class="col">
            <button type="button" class="@($"btn {(Filter== CardData.ProjectType_Value.All? "btn-primary": "btn-outline-primary")} btn-block m-2")"
                    @onclick="(()=> Filter = CardData.ProjectType_Value.All)">
                Show All
            </button>
        </div>
        <div class="col">
            <button type="button" class="@($"btn {(Filter== CardData.ProjectType_Value.Uni? "btn-primary": "btn-outline-primary")} btn-block m-2")"
                    @onclick="(()=> Filter = CardData.ProjectType_Value.Uni)">
                University
            </button>
        </div>
        <div class="col">
            <button type="button" class="@($"btn {(Filter== CardData.ProjectType_Value.GameJams? "btn-primary": "btn-outline-primary")} btn-block m-2")"
                    @onclick="(()=> Filter = CardData.ProjectType_Value.GameJams)">
                Game Jams
            </button>
        </div>
        <div class="col">
            <button type="button" class="@($"btn {(Filter== CardData.ProjectType_Value.Studio? "btn-primary": "btn-outline-primary")} btn-block m-2")"
                    @onclick="(()=> Filter = CardData.ProjectType_Value.Studio)">
                2Q28 Studio
            </button>
        </div>
    </div>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3">
        @foreach (var item in FilteredData)
        {
            <PorfolioCard item="@item" />
        }
    </div>
</div>


@code {
    public List<CardData> FilteredData => Filter == CardData.ProjectType_Value.All ? ProjectData.Data : ProjectData.Data.Where(x => x.ProjectType == Filter).ToList();
    public CardData.ProjectType_Value Filter { get; set; } = CardData.ProjectType_Value.All;
}
