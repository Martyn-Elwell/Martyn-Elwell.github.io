@page "/portfolio"

<PageTitle>Portfolio</PageTitle>
<div class="container">
    <div class="row row-cols-1 row-cols-md-4 row-cols-lg-6 justify-content-center">
        <div class="col">
            <button type="button" class="btn btn-outline-primary btn-block m-2" data-bs-toggle="button">Show All</button>
        </div>
        <div class="col">
            <button type="button" class="btn btn-outline-primary btn-block m-2" data-bs-toggle="button">University</button>
        </div>
        <div class="col">
            <button type="button" class="btn btn-outline-primary btn-block m-2" data-bs-toggle="button">Game Jams</button>
        </div>
        <div class="col">
            <button type="button" class="btn btn-outline-primary btn-block m-2" data-bs-toggle="button">2Q28 Studio</button>
        </div>
    </div>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3">
        @foreach (var item in Data)
        {
            <div class="col mt-5">
                <a class="card h-100" href="@item.Href">
                    <img src="@item.ImageFilePath" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text">@item.Description</p>
                    </div>
                    <div class="card-footer bg-white">
                        @item.Date
                    </div>
                    @foreach (var platform in item.Platforms)
                    {
                        <div class="platform-icon"><i class="@platform.Icon"></i></div>
                    }
                </a>
            </div>
        }
    </div>
</div>
